<div class="container-fluid">
  <%= form_for @changeset, @action, fn f -> %>
    <%= if @changeset.action do %>
      <div class="row">
        <div class="col-xs-12">
          <div class="alert alert-danger">
            <p>Oops, something went wrong! Please check the errors below.</p>
          </div>
        </div><!-- /col-xs-12 -->
      </div><!-- /row -->
    <% end %>

    <div class="row">
      <div class="col-xs-12">
        <div class="form-group">
          <%= label f, :name, class: "control-label" %>
          <%= text_input f, :name, required: true,
                                   placeholder: "The Best Application (Production)",
                                   class: "form-control" %>
        </div><!-- /form-group -->
      </div><!-- /col-xs-12 -->
    </div><!-- /row -->

    <div class="row">
      <div class="col-xs-6">
        <div class="form-group">
          <%= label f, :app_key, class: "control-label" %>
          <%= text_input f, :app_key, required: true,
                                  class: "form-control",
                                  disabled: true %>
        </div><!-- /form-group -->
      </div><!-- /col-xs-6 -->

      <div class="col-xs-6">
        <div class="form-group">
          <%= label f, :app_secret, class: "control-label" %>
          <%= text_input f, :app_secret, required: true,
                                     class: "form-control",
                                     disabled: true %>
        </div><!-- /form-group -->
      </div><!-- /col-xs-6 -->
    </div><!-- /row -->

    <div class="row">
      <div class="col-xs-12">
        <hr class="m-t-2" />

        <div class="form-group pull-right">
          <%= submit "Save", class: "btn btn-sm btn-primary" %>
        </div>
      </div><!-- /col-xs-12 -->
    </div><!-- /row -->
  <% end %>
</div>
